@{
    ViewBag.Title = "Home Page";
}

<script src="@Url.Content("~/Scripts/Home/index.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet"type="text/css" />


<div class="row">
    <div class="span3">
        <div class="well">
            <ul class="nav nav-list">
                <li>
                    <label for="releaseDateFrom" class="datepickerLabel">Date From:</label>
                    <input placeholder="start date" type="text" id="releaseDateFrom" class="datepicker form-search"/>
                </li>
                <li id="dateToDiv">
                    <label for="releaseDateTo" class="datepickerLabel">Date To:</label>
                    <input placeholder="end date" type="text" id="releaseDateTo" class="datepicker"/>
                </li>
                <li id="iteration">
                    <label for="iterationNo" id="iterationLabel">Iteration:</label>
                    <input placeholder="e.g. Trunk" type="text" id="iterationNo"/>
                </li>
                <li id="path">
                    <label for="pathType" id="pathLabel">Path:</label>
                    <select id="pathType" class="dropdown">
                        <option>Reed</option>
                        <option>Recruiter</option>
                        <option>CV Builder</option>
                        <option>Tools</option>
                        <option>Exchange</option>
                        <option>Courses</option>
                    </select>
                </li>
                <li>
                    <label for="depth" id="depthLabel">Checkins:</label>
                    <div class="checkinSlider"></div>
                    <input placeholder="e.g. 100" type="text" id="depth"/>
                </li>
                <li>
                    <button id="showMap" class="btn"><i class="icon-play"></i> Show Map</button>
                    <button id="clearButton" class="btn"><i class="icon-trash"></i> Clear</button>  
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="preloader">
    <img src="@Url.Content("~/Content/images/282.gif")" alt="loading gif"/>
    <p>loading...</p>
</div>
<div id="logWrapper"><h2 id="log"></h2></div>        
<div>
    <section id="infovis"></section>
</div>
<footer>
</footer>

